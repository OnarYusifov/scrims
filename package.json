{
  "name": "trayb-customs",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "setup:env": "bash setup-env.sh",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "turbo run build --filter=@trayb/backend... --filter=@trayb/frontend...",
    "build:backend": "turbo run build --filter=@trayb/backend",
    "build:frontend": "turbo run build --filter=@trayb/frontend",
    "lint": "turbo run lint --filter=@trayb/backend... --filter=@trayb/frontend...",
    "test": "turbo run test --filter=@trayb/backend... --filter=@trayb/frontend...",
    "start": "npm run start:backend & npm run start:frontend",
    "start:backend": "cd apps/backend && npm start",
    "start:frontend": "cd apps/frontend && npm start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deps:audit": "npm audit --omit=dev",
    "deps:check": "npx npm-check-updates --format group",
    "deps:upgrade": "npx npm-check-updates --format group --upgrade && npm install",
    "loadtest": "node scripts/loadtest/run-loadtest.cjs",
    "env:check": "node scripts/env/validate-env.cjs --context=local --file=.env",
    "env:check:ci": "node scripts/env/validate-env.cjs --context=ci --require-file=false"
  },
  "devDependencies": {
    "autocannon": "^7.14.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "npm-check-updates": "^17.1.6",
    "prettier": "^3.4.2",
    "turbo": "^2.6.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "csv-writer": "^1.6.0",
    "sharp": "^0.34.5",
    "tesseract.js": "^6.0.1"
  }
}
