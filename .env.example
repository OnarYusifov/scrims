# ==============================================
# TRAYB CUSTOMS - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# DATABASE
# ==============================================
POSTGRES_USER=trayb
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=trayb_customs
DATABASE_URL=postgresql://trayb:your_secure_password_here@localhost:5432/trayb_customs?schema=public

# ==============================================
# REDIS
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# DISCORD OAUTH (Get from https://discord.com/developers/applications)
# ==============================================
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:4001/api/auth/discord/callback

# ==============================================
# BACKEND (PORT 4001)
# ==============================================
NODE_ENV=development
PORT=4001
HOST=0.0.0.0

# Security
JWT_SECRET=your_jwt_secret_min_32_chars_CHANGE_THIS
SESSION_SECRET=your_session_secret_min_32_chars_CHANGE_THIS

# Frontend URL
FRONTEND_URL=http://localhost:4000
CORS_ORIGIN=http://localhost:4000

# ==============================================
# FRONTEND (PORT 4000)
# ==============================================
NEXT_PUBLIC_API_URL=http://localhost:4001

# ==============================================
# PRODUCTION OVERRIDES (for Dokploy/deployment)
# ==============================================
# Uncomment and modify these for production:

# PRODUCTION DATABASE (use internal service hostnames)
# DATABASE_URL=postgresql://trayb:PASSWORD@trayb-postgres:5432/trayb_customs?schema=public
# REDIS_URL=redis://trayb-redis:6379

# PRODUCTION URLs
# DISCORD_REDIRECT_URI=https://customs.trayb.az/api/auth/discord/callback
# FRONTEND_URL=https://customs.trayb.az
# CORS_ORIGIN=https://customs.trayb.az
# NEXT_PUBLIC_API_URL=https://api.customs.trayb.az
